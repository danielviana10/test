@{
    ViewData["Title"] = "Editar item";
}

@addTagHelper *, Mercadinho

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar</title>
    <link rel="stylesheet" href="~/css/registro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mercadinho.styles.css" asp-append-version="true" />
</head>
<body>
    <h5>registro de</h5>
    <h5>sabores</h5>

    <main>

        <alert texto="@TempData["mensagem"]"></alert>

        <div id="container">
            <form asp-action="Editar" id="formulario">
                <partial name="_Formulario" id="formulario"></partial>
                <button id="botaoEditar" type="submit">Editar</button>
            </form>
            <div id="foto">
                <img src="./img/bolo.png" alt="Imagem de bolos">
            </div>
        </div>
    </main>
</body>
</html>
